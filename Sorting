//selection sort
#include <xc.h>
void main(void) {
    int arr[100];
    
    for(int i=0;i<100;i++)
    {
        arr[i]=i+1;
    
    }
    
    
    for(int i=0;i<10;i++)
    {
        int min=i;
        
        for(int j=i+1;j<10;j++)
        {
            if(arr[min]>arr[j])
            {
                min=j;
            }
          
        }
        if(min!=i)
        {
            int temp=arr[min];
            arr[min]=arr[i];
            arr[i]=temp;
        
        }
    }
    return;
}


//Bubble sort
#include <xc.h>

void main(void) {
    
    int arr[100];
    for(int i=0;i<100;i++)
    {
        arr[i]=i+1;
    }
    
    
    
    for(int i=0;i<100;i++)
    {
        for(int j=i+1;j<100;j++)
        {
            
            if(arr[i]>arr[j])
            {
                int temp=arr[i];
                arr[i]=arr[j];
                arr[j]=temp;
          
            }
            
            
        }
        
    
    }
    
    return;
    }
